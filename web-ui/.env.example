# Environment Configuration for Voice Ferry Web UI

# Application Settings
NODE_ENV=development
PORT=3000

# Security
JWT_SECRET=voice-ferry-secret-key-change-in-production
SESSION_SECRET=voice-ferry-session-secret-change-in-production

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# etcd Configuration
ETCD_ENDPOINTS=http://localhost:2379
ETCD_USERNAME=
ETCD_PASSWORD=

# gRPC Configuration
GRPC_ENDPOINT=localhost:50051
GRPC_TLS_ENABLED=false

# Database (if using database instead of file storage)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=voice_ferry
DB_USERNAME=voice_ferry
DB_PASSWORD=

# Logging
LOG_LEVEL=debug
LOG_FILE=logs/voice-ferry-ui.log

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=15

# File Storage
CONFIG_DIR=./config
DATA_DIR=./data
BACKUP_DIR=./backups

# Monitoring
METRICS_ENABLED=true
METRICS_INTERVAL=30000

# WebSocket
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=100
